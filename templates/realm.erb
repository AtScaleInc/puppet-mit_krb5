    <%= @title %> = {
<% fields = [
    'kdc',
    'admin_server',
    'database_module',
    'default_domain',
    'v4_instance_convert',
    'v4_realm',
    'auth_to_local_names',
    'auth_to_local'
]
output = []
fields.each do |k|
  if scope.include?(k)
    value = scope[k]
    if k == 'kdc' and value.respond_to?('each')
      # Allow multiple KDCs via array
      value.each do |kdc|
        output.push([k, kdc])
      end
    elsif not value.empty?
      output.push([k, value])
    end
  end
end
output.each do |tuple|
-%>
        <%= tuple[0] %> = <%= tuple[1] %>
<% end -%>
    }

